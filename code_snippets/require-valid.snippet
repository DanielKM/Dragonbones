<?xml version="1.0" encoding="utf-8"?>
<CodeSnippets xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
    <CodeSnippet Format="1.0.0">
        <Header>
          <Title>Require Valid (Logger)</Title>
          <Description>Generates an if statement that uses a logger service to require the validity of an input.</Description>
          <Author>Oussama Bouanani</Author>
          <Shortcut>reqValid</Shortcut>
        </Header>
        <Snippet>
          <Code Language="CSharp">
              <![CDATA[
              if(!$LoggerField$.RequireValid($TestSubject$,
                $$"[{GetType().Name}] $FailureMessage$"))
                return; $end$]]>
          </Code>
          <Declarations>
            <Literal>
              <ID>LoggerField</ID>
              <ToolTip>Name of the field that has the logger service.</ToolTip>
              <Default>logger</Default>
            </Literal>
            <Literal>
              <ID>TestSubject</ID>
              <ToolTip>Name of the field that represents the subject to test validity on.</ToolTip>
              <Default>subject</Default>
            </Literal>
            <Literal>
              <ID>FailureMessage</ID>
              <ToolTip>Message that gets logged when the test subject is not valid.</ToolTip>
              <Default>Test subject is not valid!</Default>
            </Literal>
          </Declarations>
        </Snippet>
    </CodeSnippet>
</CodeSnippets>
